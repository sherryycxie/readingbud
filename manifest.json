{
  "manifest_version": 3,
  "name": "Page Highlights & Bookmarks",
  "version": "1.0.0",
  "description": "Bookmark pages, highlight text, and save notes for later review.",
  "action": {
    "default_title": "Highlights",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
